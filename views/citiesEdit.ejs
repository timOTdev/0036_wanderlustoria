<% include headerPartial %>

<nav class="navbar navbar-expand-lg justify-content-between my-0 py-1 text-center" style="background: black;">
    <div class="py-1" aria-label="breadcrumb">
        <a class="btn btn-outline-secondary py-0" href="/cities">Cities</a>
        <a class="btn btn-outline-light py-0" href="/cities/<%= city._id %>"><%= city.name %>, <%= city.country %></a>
    </div>     

    <div class="py-1">
        <form class="btn btn-danger p-0" 
        id="delete" 
        action="/cities/<%= city._id%>?_method=DELETE" 
        method="POST"
        onsubmit="return confirm('Delete <%= city.name %>?');">
            <button class="btn btn-danger btn-transparent py-0">Delete</button>
        </form>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="w-50 mx-auto text-center">
            <h1>Edit City Page</h1>

            <form class="w-100" action="/cities/<%= city._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="city[name]">Name</label>
                    <input class="form-control" type="text" name="city[name]" value="<%= city.name %>" required>
                </div>
                <div class="form-group">
                    <label for="city[country]">Country</label>
                    <input class="form-control" type="text" name="city[country]" value="<%= city.country %>" required>
                </div>
                <div class="form-group">
                    <label for="city[tagline]">Tagline</label>
                    <input class="form-control" type="text" name="city[tagline]" value="<%= city.tagline %>" required>
                </div>
                <div class="form-group">
                    <label for="city[description]">Description</label>                            
                    <textarea class="form-control" type="text" name="city[description]" required><%= city.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="image">Image
                        <input class="form-control" id="image" type="file" name="image" accept="image/*">
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include footerPartial %>