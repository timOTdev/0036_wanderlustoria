<% include headerPartial %>

<div class="container">
    <div class="text-center">
      <h1 class="mt-3 py-1">Registration</h1>

      <div class="w-25 mx-auto">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-group py-1">
            <label>First Name:
              <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>">
            </label>
          </div>
          <div class="form-group py-1">
            <label>Last Name:
              <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>">
            </label>
          </div>
          <div class="form-group py-1">
            <label>Email:
              <input class="form-control" type="email" name="email" value="<%= user.email %>">
            </label>
          </div>
          <div class="form-group py-1">
            <label>Bio
              <textarea class="form-control" type="text" name="body"><%= user.body %></textarea>
            </label>
          </div>
          <div class="form-group py-1">
            <label for="image">Avatar</label>
              <input id="image" type="file" name="image" accept="image/*">
            </label>
          </div>
          <div class="form-group py-1">
            <button class="btn btn-md btn-block btn-primary">Update</button>
          </div>
        </form>
      </div>

      <a href="javascript:history.back()">Go Back</a>
    </div>
</div>

<% include footerPartial %>