<% include headerPartial %>

<div class='container'>
    <div class='row'>
      <div class='w-25 mx-auto text-center'>
        <h1 class='mt-3 py-1'>Registration</h1>
        <form action='/users/<%= user._id %>?_method=PUT' method='POST' enctype='multipart/form-data' autofocus required>
          <div class='form-group py-1'>
            <label for='firstName'>First Name:</label>
              <input class='form-control' type='text' name='firstName' value='<%= user.firstName %>' maxlength='50' required />
          </div>
          <div class='form-group py-1'>
            <label for='lastName'>Last Name:</label>
              <input class='form-control' type='text' name='lastName' value='<%= user.lastName %>' maxlength='50' required />
          </div>
          <div class='form-group py-1'>
            <label for='email'>Email:</label>
              <input class='form-control' type='email' name='email' value='<%= user.email %>' maxlength='50' required />
          </div>
          <div class='form-group py-1'>
            <label for='body'>Bio</label>
              <textarea class='form-control' type='text' name='body' maxlength='500' required><%= user.body %></textarea>
          </div>
          <div class='form-group py-1'>
            <label for='image'>Avatar
              <input class='form-control' id='image' type='file' name='image' accept='image/*' />
            </label>
          </div>
          <div class='form-group py-1'>
            <button class='btn btn-md btn-block btn-primary'>Update</button>
          </div>
        </form>
      </div>

    </div>
</div>

<% include footerPartial %>
