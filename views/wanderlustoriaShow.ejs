<% include headerPartial %>

<h1>Stories Page</h1>
<div class="jumbotron mx-auto text-center">
  <h1 class="display-4">Welcome to <%= city.name %>, <%= city.country %>!</h1>
  <h2 class="display-4"><em><%= city.headline %></em></h2>
  <hr class="my-4">
  <img class="img-fluid w-50" src="<%= city.photo %>" alt="<%= city.description %>" />
