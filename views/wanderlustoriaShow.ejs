    <a href="/wanderlustoria/<%= city._id %>/edit"><button class="btn btn-warning" style="margin: 1rem 0;">Edit</button></a>
</div>
<div class="navButtons d-inline">
  <a href="/wanderlustoria/<%= city._id %>"><button class="btn btn-danger" style="margin: 1rem 0;">Delete</button></a>
</div>
</div>

<div class="Stories text-center">
  <div class="navButtons">
    <a href="/wanderlustoria/<%= city._id %>/new"><button class="btn btn-primary" style="margin: 1rem 0;">Add New Story</button></a>
  </div>
  <h1>All the Stories</h1>
  <div class="navButtons">
    <a href="/wanderlustoria/<%= city._id %>/new"><button class="btn btn-primary" style="margin: 1rem 0;">Add New Story</button></a>
  </div>
</div>

