<% include headerPartial %>

<div class='container'>
  <div class='row'>
    <div class='w-25 mx-auto text-center'>
      <h1 class='mt-3 py-1'>Registration</h1>
      
      <form action='/register' method='POST' enctype='multipart/form-data'>
        <div class='form-group py-1'>
          <input class='form-control' type='text' name='firstName' placeholder='First Name' maxlength='20' autofocus required />
        </div>
        <div class='form-group py-1'>
          <input class='form-control' type='text' name='lastName' placeholder='Last Name' maxlength='20' required />
        </div>
        <div class='form-group py-1'>
          <input class='form-control' type='email' name='email' placeholder='Email' maxlength='20' required />
        </div>
        <div class='form-group py-1'>
          <input class='form-control' type='text' name='username' placeholder='Username' maxlength='20' required />
        </div>
        <div class='form-group py-1'>
          <input class='form-control' type='password' name='password' maxlength='20' placeholder='Password' required />
        </div>
        <div class='form-group py-1'>
          <label for='image'>Avatar
            <input class='form-control' id='image' type='file' name='image' accept='image/*' required />
          </label>
        </div>
        <div class='form-group py-1'>
          <button class='btn btn-md btn-block btn-primary'>Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include footerPartial %>
