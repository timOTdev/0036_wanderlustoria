<% include headerPartial %>

<div class="container">
    <div class="row">
        <div style="text-align: center; margin: 0 auto;">
            <h1>Edit City Page</h1>
            <form action="/wanderlustoria/<%= city._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="city[name]" value="<%= city.name %>" required>
                </div>
                <div class="form-group">
                    <input type="text" name="city[country]" value="<%= city.country %>" required>
                </div>
                <div class="form-group">
                    <input type="text" name="city[photo]" value="<%= city.photo %>" required>
                </div>
                <div class="form-group">
                    <input type="text" name="city[headline]" value="<%= city.headline %>" required>
                </div>
                <div class="form-group">
                    <input type="text" name="city[description]" value="<%= city.description %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include footerPartial %>