<% include headerPartial %>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb my-0">
        <li class="breadcrumb-item"><a href="/cities"><button class="btn">Cities</button></a></li>
        <li class="breadcrumb-item"><a href="/cities/<%= city._id %>"><button class="btn btn-info"><%= city.name %>, <%= city.country %></button></a></li>
    </ol> 
</nav>

<div class="container">
    <div class="row">
        <div class="w-100" style="text-align: center; margin: 0 auto;">
            <h1>New Story Page</h1>
            <form class="w-100" action="/cities/<%= city._id %>/stories/<%= story._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group w-100">
                    <input class="w-50" type="text" name="comment[author]" value="<%= comment.author %>"  required>
                </div>
                <div class="form-group">
                    <textarea class="w-50" type="text" name="comment[body]" required><%= comment.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include footerPartial %>